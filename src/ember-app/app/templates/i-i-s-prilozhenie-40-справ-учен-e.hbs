<h3 class="ui header">{{t "forms.i-i-s-prilozhenie-40-справ-учен-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фио
      class=(if (v-get validationModel "фио" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-40-справ-учен-e.фио-caption")
      data-test-i-i-s-prilozhenie-40-справ-учен-e-фио=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фио" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-prilozhenie-40-справ-учен-e.справРод-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.справРод
      relationName="справРод"
      projection="СправРодL"
      title=(t "forms.i-i-s-prilozhenie-40-справ-учен-e.справРод-caption")
      readonly=readonly
      componentName="справРодLookup"
      class=(if (v-get validationModel "справРод" "isInvalid") "error")
      data-test-i-i-s-prilozhenie-40-справ-учен-e-справРод=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "справРод" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.справРод.фиоРод
      class=(if (v-get validationModel.справРод "фиоРод" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-40-справ-учен-e.справРод.фиоРод-caption")
      data-test-i-i-s-prilozhenie-40-справ-учен-e-справРод-фиоРод=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.справРод "фиоРод" "message")}}
  </div>
</form>
